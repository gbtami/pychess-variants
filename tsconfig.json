{
  "include": [
    "client/*.ts"
  ],
   "compilerOptions": {
    "outDir": "./static",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noEmitOnError": false,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowJs": true,
    "module": "commonjs",
    "lib": ["DOM", "ES2016"],
    "target": "ES2016"
  }
}
